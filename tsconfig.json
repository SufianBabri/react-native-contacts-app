{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "ESNext"],
		"jsx": "react-native",
		"module": "esnext",
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"allowJs": false,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
